<Page
    x:Class="トースト通知のサンプル.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:トースト通知のサンプル"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Name="txtHoge" Grid.Row="0" Text="Hoge" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="200" />
        <Button Grid.Row="1" Content="Toast" Click="Button_Click"
                VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="200"/>
    </Grid>
</Page>
